<%- include('partials/header') %>
<main class="flex-grow flex justify-center items-center">
  <div class="bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-2xl mb-4">Login</h2>
    
    
    <form method="post" action="/">
      <div class="mb-4">
        <input type="text" name="email" placeholder="Username or email" class="w-full px-3 py-2 border rounded-md">
      </div>
      <div class="mb-4">
        <input type="password" placeholder="password" id="password" name="password" class="w-full px-3 py-2 border rounded-md">
      </div>
      <button type="submit" class="w-full bg-red-500 text-white py-2 px-4 rounded-md hover:bg-pink-600">Login</button>
    </form>
    <p class="mt-4 text-gray-700 text-center">Don't have an account? <a href="/register" class="text-red-500">Create an account</a></p>
  </div>
</main>
<%- include('./partials/footer.ejs') %>
